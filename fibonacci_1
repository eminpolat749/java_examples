package csd;

class App {
	public static void main(String [] args)
	{
		GetFibonacciNumberTest.run();
	}
}

class GetFibonacciNumberTest {	
	public static void run()
	{
		java.util.Scanner kb = new java.util.Scanner(System.in);
		
		for (;;) {
			System.out.print("Bir say覺 giriniz:");
			int n = Integer.parseInt(kb.nextLine());
			
			if (n <= 0)
				break;
			
			System.out.printf("%d.Fibonacci say覺s覺:%d%n", n, NumberUtil.getFibonacciNumber(n));
		}
		
		System.out.println("Tekrar yap覺yor musunuz?");
	}
}

class NumberUtil {
	public static int getFibonacciNumber(int n)
	{
		if (n <= 2)
			return n - 1;		
		
		int prev1 = 1, prev2 = 0, val = prev1 + prev2;
		
		for (int i = 0; i < n - 3; ++i) {
			prev2 = prev1;
			prev1 = val;
			val = prev1 + prev2;			
		}		
		
		return val;
	}	
}
